{
  "extends": ["airbnb-base", "eslint:recommended", "plugin:import/errors"],
  "plugins": [
       "promise"
   ],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "settings": {
    "import/core-modules": ["aws-sdk"]
  },
  "globals": {},
  "rules": {
    "comma-dangle": 0,
    "padded-blocks": 0,
    "no-console": 0,
    "no-unused-vars": [1, {"args": "none"}],
    "indent": [2, 4],
    "arrow-body-style": 2,
    "strict": 0,
    "import/no-extraneous-dependencies" : 0,
    "promise/param-names": 2,
    "promise/always-return": 0,
    "promise/catch-or-return": 1,
    "promise/no-native": 0,
  }
}
